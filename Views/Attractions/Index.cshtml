@model IEnumerable<TravelOhioMVC.Models.Attraction>

@{
    ViewBag.Title = "Ohio Attraction Reviews";
}

<h2>Ohio Attraction Reviews</h2>

<p>
    Don't see your favorite attraction listed? | @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LocalAttraction)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LocalAttraction)
        </td>
        <td>
            @Html.ActionLink("Read Reviews", "Index", "ReviewAttractions") |
            @Html.ActionLink("Write a Review", "Create", "ReviewAttractions") |
            @Html.ActionLink("Edit", "Edit", new { id=item.AttractionID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AttractionID })
        </td>
    </tr>
}

</table>
