@model IEnumerable<TravelOhioMVC.Models.Festival>

@{
    ViewBag.Title = "Ohio Festival Reviews";
}

<h2>Ohio Festival Reviews</h2>

<p>
    Don't see your favorite city listed? | @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LocalFestival)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LocalFestival)
        </td>
        <td>
            @Html.ActionLink("Read Reviews", "Index", "ReviewFestivals") |
            @Html.ActionLink("Write a Review", "Create", "ReviewFestivals") |
            @Html.ActionLink("Edit", "Edit", new { id=item.FestivalID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.FestivalID })
        </td>
    </tr>
}

</table>
